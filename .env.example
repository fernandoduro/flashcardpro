APP_NAME="FlashcardPro"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=flashcardpro
DB_USERNAME=sail
DB_PASSWORD=password

BROADCAST_CONNECTION=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=database

MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# This is the primary AI engine the application will use ('gemini' or 'openai')
AI_MAIN_ENGINE=gemini

# Obtain your API key from Google AI Studio: https://aistudio.google.com/
GEMINI_API_KEY=

# Obtain your API key from OpenAI Platform: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# Set to 'true' to enable the Telescope dashboard at /telescope
TELESCOPE_ENABLED=true

# --- DOCKER & LARAVEL SAIL --- #

# Port forwarding for local database connection (e.g., via MySQL Workbench)
# Change this if port 3306 is already in use on your host machine.
FORWARD_DB_PORT=3306
MYSQL_EXTRA_OPTIONS=
#WWWGROUP=1000
#WWWUSER=1000 # -- For Windows users